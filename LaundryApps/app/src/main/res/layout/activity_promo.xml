<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    tools:context=".promo.PromoActivity">
    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/hijau1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="TAMBAH PROMO" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        tools:layout_editor_absoluteX="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/hijau3"
            android:orientation="vertical"
            android:padding="16dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="79dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="XYZ 550"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="302dp"
                android:layout_height="43dp"
                android:layout_margin="3dp"
                android:text="Promo cuci 10 kg gratis cuci 1 Kg berlaku untuk kelipatannya"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <FrameLayout
                android:layout_width="93dp"
                android:layout_height="29dp"
                android:background="@color/hijau1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Active"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </TextView>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hijau3"
            android:orientation="vertical"
            android:padding="16dp"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="241dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="XYZ 550"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="302dp"
                android:layout_height="43dp"
                android:layout_margin="3dp"
                android:text="Promo cuci 10 kg gratis cuci 1 Kg berlaku untuk kelipatannya"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <FrameLayout
                android:layout_width="93dp"
                android:layout_height="29dp"
                android:background="@color/hijau1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Active"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </TextView>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>